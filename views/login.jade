            label UserName
            input.form-control(type = 'text', name = 'usernmae', placeholder = 'Enther the UserName')
        .form-group
            label Password
            input.form-control(type = 'password', name = 'password', placeholder = 'Enther the password')
        input.btn.btn-primary(type = 'submit', name = 'submit', value = 'Login')