extends layout

block content
    h2.page-header Register
    p Please register using the from below
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(method = 'post', action = '/users/register', enctype = 'multipart/form-data')
        .form-group
            label Name
            input.form-control(type = 'text', name = 'name', placeholder = 'Enther the name')
        .form-group
            label Email
            input.form-control(type = 'email', name = 'email', placeholder = 'Enther the Email')
        .form-group
            label UserName
            input.form-control(type = 'text', name = 'username', placeholder = 'Enther the UserName')
        .form-group
            label Password
            input.form-control(type = 'password', name = 'password', placeholder = 'Enther the password')
        .form-group
            label ConfirmPassword
            input.form-control(type = 'password', name = 'password2', placeholder = 'Confirm the password')
        .form-group
            label ProfileImage
            input.form-control(type = 'file', name = 'profileimage')
        input.btn.btn-primary(type = 'submit', name = 'submit', value = 'Register')